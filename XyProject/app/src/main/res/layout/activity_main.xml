<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:id="@+id/b0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:text="0" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:id="@+id/b1"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_alignBottom="@+id/b0"
            android:layout_toRightOf="@+id/b0"
            android:layout_toEndOf="@+id/b0"

            android:visibility="visible"
            android:text="1" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="2"
            android:id="@+id/b2"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_alignBottom="@+id/b1"
            android:layout_toRightOf="@+id/b1"
            android:layout_toEndOf="@+id/b1" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="3"
            android:id="@+id/b3"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_below="@+id/b0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="4"
            android:id="@+id/b4"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_alignBottom="@+id/b3"
            android:layout_toRightOf="@+id/b3"
            android:layout_toEndOf="@+id/b3" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="5"
            android:id="@+id/b5"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_alignBottom="@+id/b4"
            android:layout_toRightOf="@+id/b4"
            android:layout_toEndOf="@+id/b4" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:id="@+id/b6"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_below="@+id/b3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="6" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="7"
            android:id="@+id/b7"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_below="@+id/b3"
            android:layout_toRightOf="@+id/b3"
            android:layout_toEndOf="@+id/b3" />

        <Button
            android:layout_width="114sp"
            android:layout_height="150dp"
            android:text="8"
            android:id="@+id/b8"
            android:textSize="0sp"
            android:textStyle="bold"
            android:onClick="numClick"
            android:layout_alignBottom="@+id/b7"
            android:layout_alignLeft="@+id/b5"
            android:layout_alignStart="@+id/b5" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/Txt"
            android:gravity="bottom|right"
            android:textSize="30dp"
            android:layout_below="@+id/b6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
